printf "\n\n\n"
echo -n "Por favor, coloque o caminho da pasta do seu plugin (por exemplo: /Users/mgouveia/Projects/cart-prestashop): "
read filepath

if [ ! -d $filepath ]; then
    echo "Por favor insira um caminho v√°lido"
    printf "\n\n\n"
else
    zip -j /tmp/prestashop-mercadopago.zip $filepath/*
    mkdir src/wp-content/plugins/prestashop-mercadopago/
    unzip /tmp/prestashop-mercadopago.zip -d src/wp-content/plugins/prestashop-mercadopago/
    rm /tmp/prestashop-mercadopago.zip
    printf "\n\n\n"
    echo -n "Plugin instalado com sucesso"
    printf "\n\n\n"
fi

